<?xml version="1.0" encoding="UTF-8"?>
<widget 
	xmlns = "http://www.w3.org/ns/widgets"
	xmlns:gap = "http://phonegap.com/ns/1.0"
	id = "be.electricsheep.ARCC"
	version = "1.0.0">

	<name>ARCC</name>

	<description>
		An application for ARC to take pictures on events and capture contact details.
	</description>

	<author href="http://www.electricsheep.be"
		email="koen@electricsheep.be">
		Koen Pellegrims
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.1" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<icon src="images/icon.png" gap:role="default" />

	<feature name="http://api.phonegap.com/1.0/camera"/>
	<feature name="http://api.phonegap.com/1.0/file"/>
	<feature name="http://api.phonegap.com/1.0/network"/>

</widget>